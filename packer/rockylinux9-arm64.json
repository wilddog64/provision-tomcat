{
  "variables": {
    "vm_name": "rockylinux9-arm64",
    "iso_url": "https://download.rockylinux.org/pub/rocky/9/isos/aarch64/Rocky-9-Latest-aarch64-minimal.iso",
    "iso_checksum": "file:https://download.rockylinux.org/pub/rocky/9/isos/aarch64/CHECKSUM",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant"
  },
  "builders": [
    {
      "type": "qemu",
      "accelerator": "hvf",
      "architectures": ["aarch64"],
      "vm_name": "{{user `vm_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "output_directory": "output/{{user `vm_name`}}",
      "disk_size": 20480,
      "format": "qcow2",
      "headless": true,
      "http_directory": "packer/http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "30m",
      "boot_wait": "5s",
      "boot_command": [
        "<up><tab> inst.text inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "dnf -y install @base openssh-server",
        "systemctl enable sshd",
        "echo '{{user `ssh_username`}} ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers"
      ]
    }
  ]
}
